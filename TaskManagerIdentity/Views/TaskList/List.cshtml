@model IEnumerable<TaskManagerIdentity.Models.TaskList>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Task List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TaskList" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Add New Task
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Task Name
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Active
                    </th>
                    <th>
                        Start Time
                    </th>
                    <th>
                        End Time
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="16%">@obj.TaskName</td>
                    <td width="16%">@obj.Priority</td>
                    <td width="16%">@obj.Active</td>
                    <td width="16%">@obj.StartTime</td>
                    <td width="16%">@obj.EndTime</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TaskList" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-controller="TaskList" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Task exists.</p>
    }

</div>
